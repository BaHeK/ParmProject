<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="#DBDBDB" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Данные пассажира"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/LL_satings"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="Ф.И.О.(лат)" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="#DBDBDB"
                    android:gravity="left"
                    android:text="Ф.И.О.(лат)" />
            </LinearLayout>

            <LinearLayout
                style="@style/LL_satings"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="Ф.И.О.(рус)" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="#DBDBDB"
                    android:gravity="left"
                    android:text="Ф.И.О.(лат)" />
            </LinearLayout>

            <LinearLayout
                style="@style/LL_satings"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="Дата рождения" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="#DBDBDB"
                    android:gravity="left"
                    android:text="Ф.И.О.(лат)" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Гражданство" />

               <TextView
                   android:id="@+id/textView14"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="2dp"
                   android:background="#DBDBDB"
                   android:gravity="left"
                   android:text="Ф.И.О.(лат)" />

            </LinearLayout>

            <LinearLayout
                style="@style/LL_satings"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:text="№ документа" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="#DBDBDB"
                    android:gravity="left"
                    android:text="Ф.И.О.(лат)" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Личный номер" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:background="#DBDBDB"
                    android:gravity="left"
                    android:text="Ф.И.О.(лат)" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL1"
                style="@style/LL_satings"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:background="#2e8b57"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="СОВПАДЕНИЙ ПО СПИСКАМ ОГРАНИЧЕНИЙ НЕ НАЙДЕНО"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#DBDBDB"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn4"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="115dp"
                android:gravity="center"
                android:text="Пропустить"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="На контроль"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:enabled="true"
                android:text="Отмена"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>