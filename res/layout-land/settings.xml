<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#DBDBDB" >

        <TextView
            android:id="@+id/textViewTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Системные настройки"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="@string/TypeTr" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:gravity="fill" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Направление" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#DBDBDB" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Пользовательские настройки"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Страна въезда/выезда" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="fill" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Цель поездки" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Тип доп. документа" />

        <Spinner
            android:id="@+id/spinner8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Тип Визы" />

        <Spinner
            android:id="@+id/spinner10"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Вид Визы" />

        <Spinner
            android:id="@+id/spinner11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView13"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Гражданство" />

        <Spinner
            android:id="@+id/spinner12"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent" >

        <TextView
            android:id="@+id/textView14"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="Основной документ" />

        <Spinner
            android:id="@+id/spinner14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/LL_satings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBDBDB"
        android:gravity="center" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:text="Переинициализация" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Ок" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/Cancel" />
    </LinearLayout>

</LinearLayout>